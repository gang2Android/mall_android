<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/order_adapter_det_pro_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_adapter_det_pro_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/order_adapter_det_pro_img"
        app:layout_constraintTop_toTopOf="@+id/order_adapter_det_pro_img" />

    <TextView
        android:id="@+id/order_adapter_det_pro_spec"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="spec"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/order_adapter_det_pro_name"
        app:layout_constraintTop_toBottomOf="@+id/order_adapter_det_pro_name" />

    <TextView
        android:id="@+id/order_adapter_det_pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¥0.00"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/order_adapter_det_pro_spec" />

    <TextView
        android:id="@+id/order_adapter_det_pro_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>